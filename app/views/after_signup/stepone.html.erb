  <li class="relative md:flex-1 md:flex">
  <!-- Current Step -->
  <a href="#" class="px-6 py-4 flex items-center text-sm font-medium">
    <span class="flex-shrink-0 w-10 h-10 flex items-center justify-center border-2 border-indigo-600 rounded-full" aria-current="step">
      <span class="text-indigo-600">01</span>
    </span>
    <span class="ml-4 text-sm font-medium text-indigo-600">Basic Information</span>
  </a>

  <div class="hidden md:block absolute top-0 right-0 h-full w-5" aria-hidden="true">
    <svg class="h-full w-full text-gray-300" viewBox="0 0 22 80" fill="none" preserveAspectRatio="none">
      <path d="M0 -2L20 40L0 82" vector-effect="non-scaling-stroke" stroke="currentcolor" stroke-linejoin="round" />
    </svg>
  </div>
</li>

    <li class="relative md:flex-1 md:flex">
      <!-- Upcoming Step -->
      <a href="#" class="group flex items-center">
        <span class="px-6 py-4 flex items-center text-sm font-medium">
          <span class="flex-shrink-0 w-10 h-10 flex items-center justify-center border-2 border-gray-300 rounded-full group-hover:border-gray-400">
            <span class="text-gray-500 group-hover:text-gray-900">02</span>
          </span>
          <span class="ml-4 text-sm font-medium text-gray-500 group-hover:text-gray-900">Influencer Categories</span>
        </span>
      </a>
      <div class="hidden md:block absolute top-0 right-0 h-full w-5" aria-hidden="true">
        <svg class="h-full w-full text-gray-300" viewBox="0 0 22 80" fill="none" preserveAspectRatio="none">
          <path d="M0 -2L20 40L0 82" vector-effect="non-scaling-stroke" stroke="currentcolor" stroke-linejoin="round" />
        </svg>
      </div>
    </li>

    <li class="relative md:flex-1 md:flex">
      <!-- Upcoming Step -->
      <a href="#" class="group flex items-center">
        <span class="px-6 py-4 flex items-center text-sm font-medium">
          <span class="flex-shrink-0 w-10 h-10 flex items-center justify-center border-2 border-gray-300 rounded-full group-hover:border-gray-400">
            <span class="text-gray-500 group-hover:text-gray-900">03</span>
          </span>
          <span class="ml-4 text-sm font-medium text-gray-500 group-hover:text-gray-900">Social Information</span>
        </span>
      </a>
    </li>
  </ol>
</nav>

<div class="container mx-auto py-4 px-6">
<%= form_for(@user, :url => wizard_path, :method => :put) do |f| %>
      <div
        class="container mx-auto grid items-start  sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-0 md:mt-8 gap-8">
        <div class=" w-11/12 md:w-full rounded shadow bg-white">
          <div class="bg-gray-100 md:flex items-stretch w-full border border-gray-100">
          </div>
          <div class="w-full px-8 py-6 border-b border-gray-300">
            <div class="flex flex-col xl:w-3/5 lg:w-2/6 w-full">
              <label for="title" class="pb-2 text-sm font-normal text-gray-800">Gender Pronouns</label>
              <%= f.text_field :gender, class:'border border-gray-300 pl-3 py-3 shadow-sm rounded text-sm focus:outline-none focus:border-indigo-700 text-gray-800', placeholder:'Gender pronouns' %>
            </div>
            <div class="mt-6 flex flex-col w-full">
              <label for="content" class="pb-2 text-sm font-normal text-gray-800">Date of Birth (numbers only)</label>
              <%= f.text_field :dob, class:'border border-gray-300 pl-3 py-3 shadow-sm rounded text-sm focus:outline-none focus:border-indigo-700 text-gray-800', placeholder:'Ex. 01/01/2000' %>
            </div>
          </div>
          <div class="w-full px-8 py-6">
          <div class="flex flex-col xl:w-3/5 lg:w-2/6 w-full">
          <label for="title" class="pb-2 text-sm font-normal text-gray-800">Which city are you from?</label>
            <%= f.text_field :city, class:'border border-gray-300 pl-3 py-3 shadow-sm rounded text-sm focus:outline-none focus:border-indigo-700 text-gray-800', placeholder:'Ex. Chicago' %>
        </div>
        <div class="mt-6 flex flex-col w-full">
          <label for="content" class="pb-2 text-sm font-normal text-gray-800">What is your phone number? (this is only if you opt in for phone contacting)</label>
          <%= f.text_field :phonenumber, class:'border border-gray-300 pl-3 py-3 shadow-sm rounded text-sm focus:outline-none focus:border-indigo-700 text-gray-800', placeholder:'012-345-6789' %>
        </div>
        <div class="actions">
    <%= f.submit 'Next', :class => 'btn btn-primary mt-5' %>
    </div>  
          </div>
          <% end %>
        </div>
</div>