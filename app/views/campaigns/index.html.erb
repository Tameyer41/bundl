<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Campaigns</h1>

    <% if @campaigns.any? %>
      <%= link_to 'New Campaign', new_campaign_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @campaigns.any? %>
    <div class="bg-white rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @campaigns, :user_id, 'User', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @campaigns, :title, 'Title', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @campaigns, :description, 'Description', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @campaigns, :link, 'Link', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @campaigns, :paymenttype, 'Paymenttype', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @campaigns, :paymentamount, 'Paymentamount', class: 'text-gray-700' %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @campaigns.each do |campaign| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                      <td class="p-3"><%= campaign.user_id %></td>
                      <td class="p-3"><%= campaign.title %></td>
                      <td class="p-3"><%= campaign.description %></td>
                      <td class="p-3"><%= campaign.link %></td>
                      <td class="p-3"><%= campaign.paymenttype %></td>
                      <td class="p-3"><%= campaign.paymentamount %></td>
          
            <td>
              <%= link_to "View", campaign, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Campaign</p>
        <%= link_to 'New Campaign', new_campaign_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
